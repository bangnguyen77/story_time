<h1>Detail page for story: <%= @story.title %> </h1>


<p><%= link_to "Edit", edit_story_path(@story) %></p>
<p><%= link_to "Delete", story_path(@story),
                          :data => {:confirm => "Are you sure?",
                                    :method => "delete"} %></p>

<% if @story.sentences.any? %>
  <h4>This is the story a sentence at a time:</h4>

  <ul>
    <% @story.sentences.each do |sentence| %>
      <li>
        <%= link_to sentence.text, story_sentence_path(sentence) %>  |
        <%= sentence.author %> |
        <%= link_to "Edit", edit_story_sentence_path(@story, sentence) %> |
        <%= link_to "Delete", story_sentence_path(@story, sentence),
                                         :data => {:confirm => "Are you sure?",
                                                        :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no sentences yet!</p>
<% end %>

<%= link_to "Add a sentence", new_story_sentence_path(@story) %>
<hr>
